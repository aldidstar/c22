<%- include('partials/header') %>

<form action="" method="GET">
  <input type="hidden" name="page" value="1" />
  <h1>BREAD (Browse Read Edit Delete)</h1>

  <input onclick="myFunction1()" type="checkbox" id="myCheck1" />
  <div class="mb-3 row">
    <label for="Name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input
        type="text"
       
        class="form-control"
        id="Name"
        name="name"
        placeholder="Enter your name"
       
       
      />
    </div>
  </div>

  <input onclick="myFunction2()" type="checkbox" id="myCheck2">
  <div class="mb-3 row">
    <label for="Weight" class="col-sm-2 col-form-label">Weight</label>
    <div class="col-sm-10">
      <input
        type="number"
        
        class="form-control"
        id="Weight"
        name="weight"
        placeholder="Enter your weight (kg)"
       
      />
    </div>
  </div>

  <input onclick="myFunction3()" type="checkbox" id="myCheck3">
  <div class="mb-3 row">
    <label for="Height" class="col-sm-2 col-form-label">Height</label>
    <div class="col-sm-10">
      <input
        type="number"
        
        class="form-control"
        id="Height"
        name="height"
        placeholder="Enter your Height (cm)"
       
      />
    </div>
  </div>

  <input onclick="myFunction4()" type="checkbox" id="myCheck4">
  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">Date</label>
    <div class="col-sm-10">
      <input
        type="date"
       
        class="form-control"
        id="start"
        name="start"
        
      />
      <br /> to <br /><br />
      <input
        type="date"
       
        class="form-control"
        id="end"
        name="end"
        
        /> 
    </div>
  </div>

  <input onclick="myFunction5()" type="checkbox" id="myCheck5">
  <div class="mb-3 row">
    <label for="Status" class="col-sm-2 col-form-label">Marriage Status</label>
    <div class="col-sm-10">
        <select type="boolean" id="Status" name="status" disabled>
            <option >Choose your choice</option>
            <option >true</option>
            <option >false</option>
          </select>
      
    </div>
  </div>

  <button type="submit" class="btn btn-success">Search</button>
  <a class="btn btn-warning" href="/">Reset</a>

  <br /><br /><br /><br />

</form>

<table class="table table-striped">
  <tr>
    <th>No</th>
    <th>Name</th>
    <th>Weight</th>
    <th>Height</th>
    <th>Date</th>
    <th>Marriage Status</th>
    <th>Action</th>
  </tr>
  <% nama.forEach((item, index) => { %>
    <tr class="genap">
      <td><%= index + 1 %></td>
      <td><%= item.nama %></td>
      <td><%= item.berat %></td>
      <td><%= item.tinggi%></td>
      <td><%= moment(item.tanggal).format('D MMMM YYYY') %></td>
      <td><%= item.hubungan %></td>
      <td>
        <a class="btn btn-success" href="/edit/<%= item._id %>">edit</a>
        <a class="btn btn-danger" href="/delete/<%= item._id %>">delete</a>
      </td>
    </tr>
    <% }) %>
</table>

<nav aria-label="...">
  <ul class="pagination">
    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item active" aria-current="page">
      <a class="page-link" href="#">2</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>

<a class="btn btn-primary" href="add"> Add</a>



<%- include('partials/footer') %>
